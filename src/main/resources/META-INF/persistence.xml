<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <!-- Define Persistence Unit -->
    <persistence-unit name="citasPU" transaction-type="JTA">
        <jta-data-source>jdbc/SqlServerDS</jta-data-source>

        <class>com.mycompany.sistema.cita.domain.Empresa</class>
        <class>com.mycompany.sistema.cita.domain.Solicitante</class>
        <class>com.mycompany.sistema.cita.domain.Motivo</class>
        <class>com.mycompany.sistema.cita.domain.Horario</class>
        <class>com.mycompany.sistema.cita.domain.EstadoAtencion</class>
        <class>com.mycompany.sistema.cita.domain.Cita</class>
        
        <properties>
            <!-- EclipseLink en Payara -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.SQLServerPlatform"/>
            <!-- Opcional: mostrar SQL -->
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
